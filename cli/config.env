# 設定ファイル - config.env
# このファイルを読み込んで環境変数を設定

# AWS基本設定
export AWS_REGION="us-east-1"
export AWS_AVAILABILITY_ZONE="us-east-1a"
export AWS_PROFILE=""  # 必要に応じて設定

# リソース名設定
export VPC_NAME="demo-vpc"
export SUBNET_NAME="demo-private-subnet" 
export INSTANCE_NAME="demo-instance"
export STACK_NAME="demo-vpc-ec2-stack"

# ネットワーク設定
export VPC_CIDR="10.0.0.0/16"
export SUBNET_CIDR="10.0.1.0/24"
export PRIVATE_SUBNET_CIDR="10.0.1.0/24"  # スクリプト互換性のため追加

# アベイラビリティゾーン設定（スクリプト互換性のため）
export AVAILABILITY_ZONE="us-east-1a"

# EC2設定
export INSTANCE_TYPE="t3.micro"

# セキュリティグループ名
export INSTANCE_SG_NAME="demo-instance-sg"
export ENDPOINT_SG_NAME="demo-vpc-endpoint-sg"

# IAMリソース名
export IAM_ROLE_NAME="demo-ec2-role"
export INSTANCE_PROFILE_NAME="demo-ec2-instance-profile"

# CloudFormation設定
export CF_TEMPLATE_FILE="vpc-ec2-demo.yaml"

# ログ設定
export LOG_FILE="infrastructure-$(date +%Y%m%d_%H%M%S).log"

# タグ設定
export PROJECT_TAG="CloudFormationDemo"
export ENVIRONMENT_TAG="Demo"

echo "設定ファイル config.env が読み込まれました"
echo "リージョン: $AWS_REGION"
echo "プロジェクト: $PROJECT_TAG"